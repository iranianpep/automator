{
  "vars": {
    "sudo": true,
    "debug": true,
    "doc_root": "/var/www/html"
  },
  "tasks": [
    {
      "files": [
        {
          "name": "/root/index.php",
          "ensure": "present"
        }
      ]
    },
    {
      "execs": [
        {
          "name": "apt-get update",
          "action": "apt-get update -y"
        },
        {
          "name": "iptables -F",
          "action": "iptables -F"
        }
      ],
      "packages": [
        {
          "name": "apache2",
          "action": "install",
          "version": "latest",
          "after_tasks": [
            {
              "services": [
                {
                  "name": "apache2",
                  "ensure": "running"
                }
              ]
            }
          ]
        },
        {
          "name": "php",
          "action": "install",
          "version": "latest",
          "after_tasks": [
            {
              "services": [
                {
                  "name": "php7.0-fpm",
                  "ensure": "running"
                }
              ]
            }
          ]
        },
        {
          "name": "libapache2-mod-php7.0",
          "action": "install",
          "version": "latest",
          "after_tasks": [
            {
              "services": [
                {
                  "name": "apache2",
                  "ensure": "restarted"
                }
              ]
            }
          ]
        }
      ],
      "services": [
        {
          "name": "apache2",
          "ensure": "running"
        }
      ],
      "directories": [
        {
          "name": "{$doc_root}",
          "action": "remove",
          "after_tasks": [
            {
              "directories": [
                {
                  "name": "{$doc_root}",
                  "action": "create",
                  "owner": "www-data",
                  "group": "www-data",
                  "mode": 755
                }
              ]
            }
          ]
        }
      ],
      "files": [
        {
          "name": "{$doc_root}/index.php",
          "source": "/root/index.php",
          "action": "create",
          "owner": "www-data",
          "group": "www-data",
          "mode": 644
        }
      ]
    }
  ]
}