{
  "vars": {
    "sudo": true,
    "debug": true,
    "doc_root": "/var/www/html"
  },
  "tasks": [
    {
      "files": [
        {
          "name": "/home/ubuntu/index.php",
          "ensure": "present"
        }
      ]
    },
    {
      "execs": [
        {
          "name": "apt-get update",
          "action": "apt-get update -y"
        }
      ],
      "packages": [
        {
          "name": "apache2",
          "action": "install",
          "version": "latest",
          "after_tasks": [
            {
              "services": [
                {
                  "name": "apache2",
                  "ensure": "running"
                }
              ]
            }
          ]
        },
        {
          "name": "curl",
          "action": "install",
          "version": "latest"
        },
        {
          "name": "php",
          "action": "install",
          "version": "latest",
          "after_tasks": [
            {
              "services": [
                {
                  "name": "php7.0-fpm",
                  "ensure": "running"
                }
              ]
            }
          ]
        },
        {
          "name": "libapache2-mod-php7.0",
          "action": "install",
          "version": "latest",
          "after_tasks": [
            {
              "services": [
                {
                  "name": "apache2",
                  "ensure": "restarted"
                }
              ]
            }
          ]
        }
      ],
      "services": [
        {
          "name": "apache2",
          "ensure": "running"
        }
      ],
      "files": [
        {
          "name": "{$doc_root}/index.php",
          "source": "/home/ubuntu/index.php",
          "action": "create",
          "owner": "www-data",
          "group": "www-data",
          "mode": 644
        },
        {
          "name": "{$doc_root}/index.html",
          "action": "remove"
        }
      ]
    }
  ]
}